<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Official Microsoft Icons</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-warning" aria-hidden="true"></span> Disclaimer
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="iconlist/azure" Match="NavLinkMatch.Prefix">
                <span class="oi oi-cloud" aria-hidden="true"></span> Azure
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="iconlist/fabric" Match="NavLinkMatch.Prefix">
                <span class="oi oi-graph" aria-hidden="true"></span> Fabric
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="iconlist/microsoft365" Match="NavLinkMatch.Prefix">
                <span class="oi oi-document" aria-hidden="true"></span> Microsoft 365
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="iconlist/powerplatform" Match="NavLinkMatch.Prefix">
                <span class="oi oi-power-standby" aria-hidden="true"></span> Power Platform
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="iconlist/dynamics365" Match="NavLinkMatch.Prefix">
                <span class="oi oi-bullhorn" aria-hidden="true"></span> Dynamics 365
            </NavLink>
        </div>
    </nav>

    <div class="px-3 py-4">
        <p class="mb-0 text-muted small">Developed by <a href="https://michaeljohnpena.com" target="_blank">Michael John Peña</a></p>
    </div>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
